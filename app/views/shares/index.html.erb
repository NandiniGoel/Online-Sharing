<center><h1>Shared Posts</h1><br /> 
	<% if user_signed_in? %>
	<h1><%= link_to current_user.full_name, root_path %></h1>
	<%= link_to current_user.email, root_path %>
	<br />
	
	
	<% end -%>
<center>
	<div>
	<% if user_signed_in? %>
<button class="btn btn-primary" type="button"><%= link_to "New Share", new_share_path %></button><br />
<% else %>
</div>
<% end -%>
<table>
 

<% @shares.each do |share| %>

  <tr>
    <td><%= share.Content %></td>
<br /></tr></table>
<%= link_to time_ago_in_words(share.created_at) + " ago", share %>|
<%= link_to 'Edit', edit_share_path(share) %>|
<%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %>
<br /><br />
<hr color="grey" width="100%" height="10">
<% end %>
<br />
